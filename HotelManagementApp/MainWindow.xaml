<Window x:Class="HotelManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagementApp"
        xmlns:local1="clr-namespace:HotelManagementApp.View"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:HotelManagementApp.UserControlUI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        ResizeMode="NoResize"
        WindowStyle="None"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainVm}"
        Name="MainMenuWindow"
        Title="Hotel Management Application"
        WindowStartupLocation="CenterScreen"
        Width="1300"
        Height="700">
    <Window.Background>

        <ImageBrush ImageSource="Images/background.jpg" />

    </Window.Background>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}"
                                   CommandParameter="{Binding ElementName=MainMenuWindow}">
            </i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=MainWindow}"></uc:ControlBarUC>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="99*" />
                <ColumnDefinition Width="101*" />
            </Grid.ColumnDefinitions>
            <TabControl Grid.ColumnSpan="2"
                        Margin="0,0,0,0.2"
                        materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        SnapsToDevicePixels="True"
                        Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                        TabStripPlacement="Left">
                <!--SelectionChanged="TabControl_SelectionChanged"-->

                <TabItem>

                    <TabItem.Header>

                        <StackPanel Width="auto"
                                    Height="auto">
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="ViewDashboard" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="Main" />
                        </StackPanel>
                    </TabItem.Header>
                    <!--  MainUI start here  -->
                    <Grid>
                        <Grid Name="MainUI" 
                              Visibility="{Binding AdminVisibility, Source={StaticResource Const}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="250" />
                                <RowDefinition Height="141*" />
                                <RowDefinition Height="277*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="400" />
                                    <ColumnDefinition Width="400" />
                                    <ColumnDefinition Width="400" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <materialDesign:Card Margin="25"
                                                     Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                                     Foreground="{x:Null}">

                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush StartPoint="0.5,0"
                                                             EndPoint="0.5,1">
                                                <GradientStop Offset="1"
                                                          Color="#FF7D27FF" />
                                                <GradientStop Color="#FFBB2086" />
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>
                                    </materialDesign:Card>
                                    <Label x:Name="label_money"
                                       Width="93"
                                       Height="64"
                                       Margin="150,147,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content="">
                                        <Label.Background>
                                            <ImageBrush ImageSource="Images/money.png"
                                                    Stretch="Uniform" />
                                        </Label.Background>
                                    </Label>
                                    <Label x:Name="label_income"
                                       Width="346"
                                       Height="39"
                                       Margin="26,39,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       Content="ALL INCOME IN VND"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9" />
                                    <Label x:Name="income"
                                       Width="344"
                                       Height="31"
                                       Margin="28,105,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                        Content="{Binding Alltimerevenue}"
                                       Foreground="#DDF9F9F9" />

                                </Grid>
                                <Grid Grid.Column="1">
                                    <materialDesign:Card Margin="25"
                                                     Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                                     Foreground="{x:Null}">

                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush StartPoint="0.5,0"
                                                             EndPoint="0.5,1">
                                                <GradientStop Color="#FFF51C40" />
                                                <GradientStop Offset="1"
                                                          Color="#FFD89B65" />
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>

                                    </materialDesign:Card>
                                    <Label x:Name="label_guesttext"
                                       Width="347"
                                       Height="39"
                                       Margin="27,39,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       Content="THIS MONTH"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9" />
                                    <Label x:Name="label_guest"
                                       Width="93"
                                       Height="64"
                                       Margin="147,149,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content="">
                                        <Label.Background>
                                            <ImageBrush ImageSource="Images/tags.png"
                                                    Stretch="Uniform" />
                                        </Label.Background>
                                    </Label>
                                    <Label x:Name="guest"
                                       Width="344"
                                       Height="33"
                                       Margin="29,104,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                        Content="{Binding ThisMonthRevenue}"
                                       Foreground="#DDF9F9F9" />
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0*" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:Card Margin="25,25,25,25"
                                                     Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                                     Foreground="{x:Null}"
                                                     Grid.ColumnSpan="2">

                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush StartPoint="0.5,0"
                                                             EndPoint="0.5,1">
                                                <GradientStop Offset="1"
                                                          Color="#FF016CFD" />
                                                <GradientStop Color="#FF00E4FF" />
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>

                                    </materialDesign:Card>
                                    <Label x:Name="label1_Copy"
                                       Width="93"
                                       Height="64"
                                       Margin="156,145,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content=""
                                       Grid.ColumnSpan="2">
                                        <Label.Background>
                                            <ImageBrush ImageSource="Images/dollar.png"
                                                    Stretch="Uniform" />
                                        </Label.Background>
                                    </Label>
                                    <Label x:Name="label_Copy4"
                                       Width="342"
                                       Height="39"
                                       Margin="0,39,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       Content="ALL INCOME IN $"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9"
                                       Grid.Column="1" />
                                    <Label x:Name="usd"
                                       Width="344"
                                       Height="33"
                                       Margin="0,104,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9"
                                       RenderTransformOrigin="0.5,0.5"
                                        Content="{Binding AlltimerevenueUSD}"
                                       Grid.Column="1">
                                        <Label.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform />
                                                <SkewTransform />
                                                <RotateTransform Angle="-0.549" />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </Label.RenderTransform>
                                    </Label>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1" Grid.RowSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="74*" />
                                    <RowDefinition Height="133*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="350" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.RowSpan="2"
                                  Grid.Column="0"
                                  Margin="25,25,25.4,24.6">
                                    <materialDesign:Card Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                                     Foreground="{x:Null}"
                                                     UniformCornerRadius="10" />
                                    <Wpf:PieChart
                                        Margin="8,20"
                                        DataTooltip="{x:Null}"
                                        Hoverable="True"
                                        InnerRadius="5"
                                        FontSize="12"
                                        LegendLocation="Bottom"
                                        Series="{Binding SeriesCollectionPie}" 
                                        StartingRotationAngle="0"/>
                                    <Button Width="100"
                                            Margin="100,0,100.4,331.6"
                                            Command="{Binding RefreshStatictics}"
                                            Content="REFRESH" />
                                </Grid>
                                <Grid Grid.RowSpan="2"
                                  Grid.Column="1"
                                  Margin="24.6,25,25,24.6">
                                    <materialDesign:Card Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                                     Foreground="{x:Null}"
                                                     UniformCornerRadius="10" />
                                    <Wpf:CartesianChart LegendLocation="Right" Series="{Binding SeriesCollectionCart}">
                                        <Wpf:CartesianChart.AxisY>
                                            <Wpf:Axis Title="Income" LabelFormatter="{Binding YFormatter}" />
                                        </Wpf:CartesianChart.AxisY>
                                        <Wpf:CartesianChart.AxisX>
                                            <Wpf:Axis Title="Month" Labels="{Binding Labels}" 
                                                      Position="LeftBottom"/>
                                        </Wpf:CartesianChart.AxisX>
                                    </Wpf:CartesianChart>

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                </TabItem>
                <TabItem>


                    <TabItem.Header>

                        <StackPanel Width="auto"
                                    Height="auto">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <!--<i:InvokeCommandAction Command="{Binding Path=ReloadCommand}"/>-->
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="RoomService" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="Service" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>


                        <!--  Main  -->

                        <Grid Grid.Row="0">



                            <!--  Main  -->




                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.5*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--  Danh sách hàng hóa  -->
                            <Grid Grid.Column="0"
                                  Margin="10">



                                <!--  Filter và search  -->

                                <TabControl Grid.RowSpan="2"
                                            Margin="0,0,-0.2,-0.4"
                                            materialDesign:ColorZoneAssist.Mode="PrimaryLight"
                                            Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                                            TabStripPlacement="Top">
                                    <!--SelectionChanged="TabControl_SelectionChanged_1"-->

                                    <!--  Nước uống  -->
                                    <TabItem Width="840">
                                        <TabItem.Header>
                                            <StackPanel Width="auto"
                                                        Height="auto">

                                                <TextBlock HorizontalAlignment="Center"
                                                           FontSize="30"
                                                           FontWeight="bold"
                                                           Text="MENU" />
                                            </StackPanel>
                                        </TabItem.Header>

                                        <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                                            <ListBox DataContext="{StaticResource FoodVm}" ItemsSource="{Binding FoodsAndServicesList}" Margin="20" Height="Auto" Width="Auto">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>

                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <local1:FAndSBlock DataContext="{Binding }"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </ScrollViewer>
                                    </TabItem>
                                </TabControl>
                            </Grid>


                            <!--  Đặt hàng  -->
                            <Grid Grid.Column="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="8*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1.5*" />

                                </Grid.RowDefinitions>
                                <!--  Tên sân  -->
                                <Grid Grid.Row="0"
                                      Grid.RowSpan="2"
                                      Height="58"
                                      Margin="0,0,0.2,461.2"
                                      VerticalAlignment="Bottom">
                                    <Rectangle Width="auto"
                                               Height="40"
                                               Margin="5,5,15,5"
                                               RadiusX="6"
                                               RadiusY="6"
                                               Stroke="Gray" />
                                    <ComboBox Width="300"
                                              Height="25"
                                              materialDesign:HintAssist.Hint="Field Name">
                                        <!--ItemsSource="{Binding ListbookingCombobox}"
                                              SelectedItem="{Binding FieldSelectedItem}"-->

                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <!--<StackPanel Orientation="Horizontal">

                                                    <TextBlock Text="{Binding field.name}" />
                                                    <TextBlock Text="   |   " />
                                                    <TextBlock Text="{Binding start_time, StringFormat='{}{0:h:mm tt}'}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding end_time, StringFormat='{}{0:h:mm tt}'}" />
                                                </StackPanel>-->
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                </Grid>
                                <Grid Grid.Row="1">
                                    <Border CornerRadius="30">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="8*" />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <TextBlock Margin="20,10,10,10"
                                                               VerticalAlignment="Center"
                                                               FontSize="20"
                                                               FontWeight="DemiBold"
                                                               Text="Current Order" />
                                                </Grid>
                                                <Grid Grid.Column="1">

                                                    <Button Width="100"
                                                            Background="#FFFFDDDD"
                                                            BorderBrush="#FFFFDDDD"
                                                            BorderThickness="0"
                                                            Command="{Binding ClearAllCommand}"
                                                            Content="Clear all"
                                                            Foreground="Red"
                                                            SnapsToDevicePixels="True" />
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <ItemsControl ItemsSource="{Binding Listorder}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Background="White"
                                                                        Orientation="Vertical" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <!--<local:ProductDetailsControl />-->
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                    <ItemsControl.Template>
                                                        <ControlTemplate>
                                                            <ScrollViewer Padding="{TemplateBinding Padding}">
                                                                <ItemsPresenter />
                                                            </ScrollViewer>

                                                        </ControlTemplate>
                                                    </ItemsControl.Template>
                                                </ItemsControl>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!--  Tong tien  -->
                                <Grid Grid.Row="2"
                                      Margin="10,20,10,0">

                                    <TextBlock Margin="20,5,10,0"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Text="Total"
                                               TextAlignment="Left" />
                                    <TextBlock x:Name="total"
                                               Margin="20,5,10,0"
                                               Panel.ZIndex="1"
                                               FontSize="24"
                                               Foreground="White"
                                               Text="{Binding total, StringFormat={}{0:N0} VND}"
                                               TextAlignment="Right" />
                                    <Rectangle Width="200"
                                               Height="30"
                                               Margin="0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Fill="#FF5656E7"
                                               RadiusX="4"
                                               RadiusY="4" />

                                </Grid>
                                <Grid Grid.Row="3">


                                    <Button Grid.Column="0"
                                            Width="300"
                                            Height="45"
                                            materialDesign:ButtonAssist.CornerRadius="5"
                                            Command="{Binding OrderCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            ToolTip="MaterialDesignRaisedButton with Round Corners">
                                        <StackPanel HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Orientation="Horizontal">
                                            <materialDesign:PackIcon Width="auto"
                                                                     Height="20"
                                                                     Kind="CurrencyUsd" />
                                            <TextBlock HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"
                                                       Text="ORDER" />


                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <!--  Nút đặt hàng  -->
                            </Grid>
                        </Grid>


                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto"
                                    Height="auto">
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="CurrencyUsd" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="Payment" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid x:Name="Grid_Button">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*" />
                            <RowDefinition Height="220*" />
                            <RowDefinition Height="220*" />
                            <RowDefinition Height="220*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="133*" />
                            <ColumnDefinition Width="133*" />
                            <ColumnDefinition Width="133*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="1"
                              Grid.Column="0">
                            <Button x:Name="FB_Billbtb"
                                    Width="200"
                                    Height="150"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding ShowWindowCommand_FB}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16*" />
                                        <ColumnDefinition Width="65*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <materialDesign:PackIcon Grid.RowSpan="2"
                                                             Grid.ColumnSpan="2"
                                                             Width="82"
                                                             Height="87"
                                                             Margin="0,10,0,0"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Kind="BedSingle" />
                                    <TextBlock Grid.RowSpan="2"
                                               Grid.ColumnSpan="2"
                                               Margin="13,105,13.8,3.4"
                                               HorizontalAlignment="Center"
                                               FontWeight="Bold">
                                        Single Bedroom
                                    </TextBlock>
                                </Grid>

                            </Button>
                        </Grid>
                        <Grid Grid.Row="2"
                              Grid.Column="0">
                            <Button x:Name="VL_billbtb"
                                    Width="200"
                                    Height="150"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding ShowWindowCommand_VL}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <materialDesign:PackIcon Width="79"
                                                             Height="109"
                                                             FontSize="200"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Kind="BedDouble" />
                                    <TextBlock Grid.RowSpan="2"
                                               Margin="0,105,-0.338,4.277"
                                               HorizontalAlignment="Center"
                                               FontWeight="Bold">
                                        Double Bedroom
                                    </TextBlock>
                                </Grid>
                            </Button>
                        </Grid>
                        <Grid Grid.Row="3"
                              Grid.Column="0">
                            <Button x:Name="Bk_billbtb"
                                    Width="200"
                                    Height="150"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding ShowWindowCommand_BK}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="27*" />
                                        <ColumnDefinition Width="56*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="22*" />
                                        <RowDefinition Height="91*" />
                                    </Grid.RowDefinitions>
                                    <materialDesign:PackIcon Grid.Row="0"
                                                             Grid.RowSpan="3"
                                                             Grid.ColumnSpan="2"
                                                             Width="81"
                                                             Height="109"
                                                             FontSize="200"
                                                             FontWeight="ExtraBold"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Kind="BedEmpty" />
                                    <TextBlock Grid.ColumnSpan="2"
                                               Margin="15,74,0,0"
                                               HorizontalAlignment="Center"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Grid.Row="2">
                                        Triple Bedroom
                                    </TextBlock>
                                </Grid>
                            </Button>
                        </Grid>
                        <Grid Grid.Row="1"
                              Grid.RowSpan="3"
                              Grid.Column="1"
                              Grid.ColumnSpan="2"
                              Margin="0,20,20,20">
                            <Border Grid.Column="0"
                                    Width="auto"
                                    Height="auto"
                                    Margin="20,60,20,20"
                                    Background="Snow"
                                    BorderBrush="Black"
                                    CornerRadius="20">
                                <Border.BitmapEffect>
                                    <DropShadowBitmapEffect Opacity="0.6"
                                                            ShadowDepth="10"
                                                            Softness="0.3"
                                                            Color="Black" />
                                </Border.BitmapEffect>


                                <DataGrid Margin="0,0,0,0"
                                          AlternatingRowBackground="LightGray"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          BorderBrush="{x:Null}"
                                          FontSize="16"
                                          HeadersVisibility="Column"
                                          IsReadOnly="True"
                                          ItemsSource="{Binding ListCustomerInfo}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding STT}"
                                                            Header="  No" />
                                        <DataGridTextColumn Binding="{Binding Baseinfo_CusName}"
                                                            Header="Customer Name" />
                                        <DataGridTextColumn Binding="{Binding Baseinfo_CusPhoneNum}"
                                                            Header="Customer Phone" />
                                        <DataGridTextColumn Binding="{Binding Baseinfo_SumCusMoneyAmount}"
                                                            Header="Money Achive" />
                                        <DataGridTextColumn Binding="{Binding Baseinfo_SumBillAmount}"
                                                            Header="Bill Achive" />
                                        <DataGridTextColumn Binding="{Binding Baseinfo_TypeCus}"
                                                            Header="Member type" />

                                    </DataGrid.Columns>

                                </DataGrid>
                            </Border>
                        </Grid>


                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Margin="0,0,0,-20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontFamily="Bungee Inline"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Text="PAYMENT" />
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="auto"
                                    Height="auto">
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="DoorSlidingOpen" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="Booking" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">

                                <Button x:Name="SingleBR"
                                        Width="300"
                                        Height="450"
